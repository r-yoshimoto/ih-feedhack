<form class="col-md-6 offset-md-3" id="form" {{#if code}}action="/recover/change-password" {{else}}action="/recover"
  {{/if}} method="POST">
  <h1>Reset Password</h1>

  {{#if error}}
  <div class="alert alert-danger">{{ error }}</div>
  {{/if}}

  {{#if code}}

  <input type="hidden" name="resetPasswordCode" value={{code}}>

  <div class="form-group">
    <label for="password">Enter you New Password</label>
    <input name="password" type="password" class="form-control" id="password" placeholder="New Password">
  </div>

  <div class="form-group">
    <label for="password">Confirm New Password</label>
    <input name="passwordCheck" type="password" class="form-control" id="passwordCheck" placeholder="Repeat Password">
  </div>


  <button class="btn btn-primary">Change Password</button>

  {{else}}
  <div class="form-group">
    <label for="email">Email address</label>
    <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp"
      placeholder="Enter email">
  </div>

  <button class="btn btn-primary">Submit</button>
  {{/if}}
</form>
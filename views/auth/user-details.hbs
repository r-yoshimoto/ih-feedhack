<form class="col-md-6 offset-md-3" id="form" action="/edit-profile" method="POST">
<h1>Edit Profile</h1>
{{#with user}}

{{#if ../success}}
<div class="alert alert-success">{{../success}}</div>
{{/if}}

{{#if ../error}}
<div class="alert alert-danger">{{../error}}</div>
{{/if}}

  <div class="form-group">
    <label for="fullname">Full Name</label>
    <input value="{{fullName}}" name="fullName" type="text" class="form-control" id="fullname">
  </div>

  <div class="form-group">
    <label for="email">E-mail</label>
    <input value="{{email}}" name="email"  type="email" class="form-control" id="email">
  </div>

  <button class="btn btn-primary">Save Changes</button>
  <a href="/edit-profile/change-password" class="btn btn-outline-warning">Change Password</a>
  <a href="#" class="btn btn-outline-danger">Delete Account</a>
</form>
{{/with}}
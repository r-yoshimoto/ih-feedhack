<div class="container">
  <div class="row">
    <div class="col-2"><a href="/inbox"><h2>Inbox</h2></a></div>
    <div class="col-2"><a href="/inbox/outbox"><h2>Outbox</h2></a></div>
    <div class="col-2"><h2>Draft</h2></div>
  </div>
</div>

  {{#if error}}
  <div class="alert alert-danger">{{{ error }}}</div>
  {{/if}}

  {{#if success}}
  <div class="alert alert-success">{{ success }}</div>
  {{/if}}


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">To:</th>
      <th scope="col">Message</th>
      <th scope="col">Status</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    
      {{#each feedback}}
      <tr>
      
      <th scope="row"><a href="/inbox/edit/{{_id}}">{{this.emailDraftTo}}</a></th>
      <td><a href="/inbox/edit/{{_id}}">{{comments.[0]}}{{comments.[1]}}{{comments.[2]}}...</a></td>
      <td><a href="/inbox/edit/{{_id}}">{{this.status}}</a></td>
      <td>
        <form action="/inbox/delete" method="POST">
        <input type="hidden" name="_id" value="{{_id}}">
        <button type="submit" class="btn btn-danger btn-sm" >Delete</button>
        </form>
    </td>
      </tr>
      {{/each}}
    
  </tbody>
</table>




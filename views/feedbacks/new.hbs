<form class="col-md-6 offset-md-3" id="form" action="/feedbacks/add" method="POST">
<h1>Create your feedback</h1>

{{#if msgError}}
      <div class="alert alert-danger">{{ msgError }}</div>
    {{/if}}
    

  <div class="form-group">
    <label for="email">Person's email</label>
    <input name="email" type="text" class="form-control" id="email" aria-describedby="nameHelp" placeholder="Enter the person's e-mail">
  </div>

  <div class="form-group">
    <label for="comments">Feedback</label>
    <br><textarea name="comments" class="form-control" placeholder="Write a constructive feedback"></textarea>
  </div>

  <div class="form-group">
    <label for="type">Select the type of your feedback</label><br>
    <select multiple class="form-control" name='type'>
        <option value="Downward">Downward</option>
        <option value="Upward">Upward</option>
        <option value="Pair">Pair</option>
        <option value="None of above">None of above</option>
    </select>
 </div>

 

  <button class="btn btn-primary">Save</button>

</form>


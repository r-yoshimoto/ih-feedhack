<form class="col-md-6 offset-md-3" id="form" action="" method="POST">
  <h1>Create your feedback</h1>

  {{#if error}}
  <div class="alert alert-danger">{{ error }}</div>
  {{/if}}


  <div class="form-group">
    <label for="to">Person's email</label>
    <input value="{{to}}" name="to" type="email" class="form-control" id="to" placeholder="Enter the person's e-mail">
  </div>

  <div class="form-group">
    <label for="comments">Feedback</label>
    <br><textarea name="comments" class="form-control"
      placeholder="Write a constructive feedback">{{comments}}</textarea>
  </div>

  <div class="form-group">
    <label for="type">Select the type of your feedback</label><br>
    <select class="form-control" name='hierarchy'>
      {{#select hierarchy }}
      <option value="Downward">Downward</option>
      <option value="Upward">Upward</option>
      <option value="Pair">Pair</option>
      <option value="None of above">None of above</option>
      {{/select}}
    </select>
  </div>

  <div class="form-check">
    <input {{#check type}}{{/check}} type="checkbox" class="form-check-input" value="Anonymous" name="type">
    <label class="form-check-label" for="exampleCheck1">Send as anonymous</label>
  </div>

  <div class="form-check">
    <p><small>
    Sexual harassment, gender discrimination, ethnic prejudice and personal offenses will 
    not be tolerated and will be informed to local authorities.
    </small></p>
  </div>

  <button class="btn btn-danger"  id="button-delete">Discard</button>
  <button class="btn btn-primary" id="button-draft">Save as Draft</button>
  <button class="btn btn-primary" id="button-send">Send</button>


</form>